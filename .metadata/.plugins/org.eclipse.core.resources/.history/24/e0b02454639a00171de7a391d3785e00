import java.util.Random;

public class ComputePi {

    private Random rand;
    
    public static void main(String[] args) {
        
    }
    
    public double computer_pi (int n) {
        if (rand == null) rand = new Random();
        int inside = 0;
        for (int i = 1; i < n; i++) {
            double x = rand.nextDouble(),
                   y = rand.nextDouble();
            if (Math.sqrt(x*x+y*y) <= 1)
                inside++;
        }
        
        return 4*inside/n;
    }

}
