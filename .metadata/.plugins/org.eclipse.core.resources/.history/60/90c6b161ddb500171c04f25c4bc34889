import edu.princeton.cs.algs4.MaxPQ;

public class PQTester {

    public static void main (String[] args) {
        for (int i = 10; i < 1000000; i+= i*10) {
            int j;
            long running = 0;
            for (j = 1; j < 5; j+=10) {
                long start = System.nanoTime();
                MaxPQ<Integer> q = new MaxPQ<Integer>(j);
                randomFill(q);
                remove(q, q.size()/2);
                randomFill(q);
                remove(q, q.size());
                running += System.nanoTime() - start;
            }
            System.out.println("N: " + i + "Avg: " + running/j);
        }
    }
    
    private static void randomFill(MaxPQ<Integer> q) {
        while (!q.isEmpty())
            q.insert(StdRandom.uniform(1000000, 10000000));
    }
    
    private static void remove(MaxPQ<Integer> q, int num) {
        for (int i = 0; i < num; i++)
            q.delMax();
    }
}
